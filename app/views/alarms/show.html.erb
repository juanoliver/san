<%- model_class = Alarm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:extID) %>:</strong></dt>
  <dd><%= @alarm.extID %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @alarm.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:severity) %>:</strong></dt>
  <dd><%= @alarm.severity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @alarm.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:object) %>:</strong></dt>
  <dd><%= @alarm.object %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @alarm.category %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipe) %>:</strong></dt>
  <dd><%= @alarm.tipe %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              alarms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_alarm_path(@alarm), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              alarm_path(@alarm),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
